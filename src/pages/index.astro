---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Main from '../components/Main.astro';
import Team from '../components/Team.astro';
import Avatar from '../components/Avatar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Sofitavirtus">
	<Header/>
	<div class="bg-white mx-auto w-full max-w-screen-xl p-2 py-2 lg:py-2">
		<Main/>
		<h1 class="text-center font-bold text-3xl bg-inherit m-8 py-4 border-t border-b">QUIÉNES SOMOS</h1>
		<Team/>
		<h1 class="text-center font-bold text-3xl bg-inherit m-8 py-4 border-t border-b">CONÓCENOS</h1>
		<div class="grid grid-cols-4 content-center">
			<Avatar name={"EVA"} img={"img/EVA-ILUSTRACION-1-300x300.png"}/>
			<Avatar name={"ISABEL"} img={"img/isabel-1-300x300.png"}/>
			<Avatar name={"GERARDO"} img={"img/GERARDO-ILUSTRACION-2-300x300.png"}/>
			<Avatar name={"PEPA"} img={"img/pepa-1-300x297.png"}/>
		</div>
		<Footer/>
	</div>
</Layout>

